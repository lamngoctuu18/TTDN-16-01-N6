<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence cho văn bản yêu cầu duyệt -->
        <record id="seq_van_ban_den_approval" model="ir.sequence">
            <field name="name">Văn bản yêu cầu duyệt</field>
            <field name="code">van_ban_den.approval</field>
            <field name="prefix">YC/%(year)s/</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next_actual">1</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Sequence cho văn bản đi phản hồi duyệt -->
        <record id="seq_van_ban_di_approval_response" model="ir.sequence">
            <field name="name">Văn bản phê duyệt</field>
            <field name="code">van_ban_di.approval_response</field>
            <field name="prefix">PD/%(year)s/</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next_actual">1</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
