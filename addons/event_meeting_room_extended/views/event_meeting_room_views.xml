<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Meeting Room Tree View -->
    <record id="view_event_meeting_room_tree" model="ir.ui.view">
        <field name="name">event.meeting.room.tree</field>
        <field name="model">event.meeting.room</field>
        <field name="arch" type="xml">
            <tree string="Phòng Họp" decoration-muted="not active" decoration-info="is_pinned">
                <field name="name"/>
                <field name="event_id"/>
                <field name="creator_name"/>
                <field name="language_id"/>
                <field name="target_audience"/>
                <field name="current_participants"/>
                <field name="max_capacity"/>
                <field name="is_full" invisible="1"/>
                <field name="is_pinned"/>
                <field name="is_closed"/>
                <field name="is_published" widget="boolean_toggle"/>
                <field name="last_activity_date"/>
                <field name="total_visits"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Meeting Room Form View -->
    <record id="view_event_meeting_room_form" model="ir.ui.view">
        <field name="name">event.meeting.room.form</field>
        <field name="model">event.meeting.room</field>
        <field name="arch" type="xml">
            <form string="Phòng Họp">
                <header>
                    <button name="action_pin" string="Ghim" type="object" class="btn-primary" attrs="{'invisible': [('is_pinned', '=', True)]}" groups="event.group_event_manager"/>
                    <button name="action_unpin" string="Bỏ Ghim" type="object" attrs="{'invisible': [('is_pinned', '=', False)]}" groups="event.group_event_manager"/>
                    <button name="action_close" string="Đóng Phòng" type="object" class="btn-warning" attrs="{'invisible': [('is_closed', '=', True)]}" groups="event.group_event_manager"/>
                    <button name="action_reopen" string="Mở Lại Phòng" type="object" class="btn-success" attrs="{'invisible': [('is_closed', '=', False)]}" groups="event.group_event_manager"/>
                    <button name="action_duplicate_room" string="Nhân Bản" type="object" icon="fa-files-o" groups="event.group_event_manager"/>
                    <field name="is_published" widget="boolean_button" options="{'terminology': 'published'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Đã Ghim" bg_color="bg-info" attrs="{'invisible': [('is_pinned', '=', False)]}"/>
                    <widget name="web_ribbon" title="Đã Đóng" bg_color="bg-danger" attrs="{'invisible': [('is_closed', '=', False)]}"/>
                    <widget name="web_ribbon" title="Đầy" bg_color="bg-warning" attrs="{'invisible': [('is_full', '=', False)]}"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên Phòng/Chủ Đề"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Thông Tin Cơ Bản">
                            <field name="event_id" options="{'no_create': True}"/>
                            <field name="creator_name" readonly="1"/>
                            <field name="language_id"/>
                            <field name="target_audience"/>
                        </group>
                        <group string="Sức Chứa">
                            <field name="max_capacity"/>
                            <field name="current_participants" readonly="1"/>
                            <field name="is_full" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Trạng Thái">
                        <group>
                            <field name="is_pinned" readonly="1"/>
                            <field name="is_closed" readonly="1"/>
                        </group>
                        <group>
                            <field name="last_activity_date" readonly="1"/>
                            <field name="total_visits" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Liên Kết">
                        <field name="room_token" readonly="1" password="True"/>
                        <field name="jitsi_room_name" readonly="1"/>
                        <field name="room_url" widget="url" readonly="1"/>
                        <field name="website_url" widget="url" readonly="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Mô Tả" name="description">
                            <field name="summary" placeholder="Tóm tắt ngắn gọn..."/>
                            <field name="description" placeholder="Mô tả chi tiết về mục đích, chủ đề của phòng, v.v."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Meeting Room Kanban View -->
    <record id="view_event_meeting_room_kanban" model="ir.ui.view">
        <field name="name">event.meeting.room.kanban</field>
        <field name="model">event.meeting.room</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="event_id"/>
                <field name="current_participants"/>
                <field name="max_capacity"/>
                <field name="is_pinned"/>
                <field name="is_closed"/>
                <field name="is_full"/>
                <field name="is_published"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <small><field name="event_id"/></small>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <span t-if="record.is_pinned.raw_value" class="badge badge-info">
                                        <i class="fa fa-thumb-tack"/> Đã Ghim
                                    </span>
                                    <span t-if="record.is_closed.raw_value" class="badge badge-danger">
                                        Đã Đóng
                                    </span>
                                    <span t-if="record.is_full.raw_value" class="badge badge-warning">
                                        Đầy
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="language_id"/>
                                <field name="target_audience"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <i class="fa fa-users"/> <field name="current_participants"/>/<field name="max_capacity"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="is_published" widget="boolean_toggle"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Meeting Room Search View -->
    <record id="view_event_meeting_room_search" model="ir.ui.view">
        <field name="name">event.meeting.room.search</field>
        <field name="model">event.meeting.room</field>
        <field name="arch" type="xml">
            <search string="Phòng Họp">
                <field name="name"/>
                <field name="event_id"/>
                <field name="creator_name"/>
                <separator/>
                <filter string="Hoạt Động" name="active" domain="[('active', '=', True)]"/>
                <filter string="Đã Xuất Bản" name="published" domain="[('is_published', '=', True)]"/>
                <filter string="Đã Ghim" name="pinned" domain="[('is_pinned', '=', True)]"/>
                <filter string="Chưa Đóng" name="not_closed" domain="[('is_closed', '=', False)]"/>
                <filter string="Chưa Đầy" name="not_full" domain="[('is_full', '=', False)]"/>
                <separator/>
                <filter string="Đã Đóng" name="closed" domain="[('is_closed', '=', True)]"/>
                <filter string="Đầy" name="full" domain="[('is_full', '=', True)]"/>
                <filter string="Đã Lưu Trữ" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Nhóm Theo">
                    <filter string="Sự Kiện" name="group_by_event" context="{'group_by': 'event_id'}"/>
                    <filter string="Ngôn Ngữ" name="group_by_language" context="{'group_by': 'language_id'}"/>
                    <filter string="Đối Tượng Mục Tiêu" name="group_by_audience" context="{'group_by': 'target_audience'}"/>
                    <filter string="Người Tạo" name="group_by_creator" context="{'group_by': 'creator_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Meeting Room Action -->
    <record id="action_event_meeting_room" model="ir.actions.act_window">
        <field name="name">Phòng Họp</field>
        <field name="res_model">event.meeting.room</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_not_closed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo Phòng Họp
            </p>
            <p>
                Phòng họp cho phép người tham gia sự kiện tập hợp trong không gian ảo để thảo luận và kết nối.
            </p>
        </field>
    </record>
</odoo>
