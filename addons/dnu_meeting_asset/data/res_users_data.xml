<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Set timezone mặc định cho admin user -->
        <record id="base.user_admin" model="res.users">
            <field name="tz">Asia/Ho_Chi_Minh</field>
        </record>
        
    </data>
    
    <!-- Update tất cả users có timezone Asia/Saigon sang Asia/Ho_Chi_Minh -->
    <data noupdate="0">
        <function model="res.users" name="search">
            <value eval="[('tz', '=', 'Asia/Saigon')]"/>
        </function>
        <function model="res.users" name="write">
            <function model="res.users" name="search">
                <value eval="[('tz', '=', 'Asia/Saigon')]"/>
            </function>
            <value eval="{'tz': 'Asia/Ho_Chi_Minh'}"/>
        </function>
    </data>
</odoo>
