<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_dnu_asset_assignment_tree" model="ir.ui.view">
            <field name="name">dnu.asset.assignment.tree</field>
            <field name="model">dnu.asset.assignment</field>
            <field name="arch" type="xml">
                <tree string="Lịch sử gán tài sản">
                    <field name="name"/>
                    <field name="asset_id"/>
                    <field name="employee_name" string="Người được gán"/>
                    <field name="nhan_vien_id" optional="hide"/>
                    <field name="employee_id" optional="hide"/>
                    <field name="department_id" optional="show"/>
                    <field name="don_vi_id" optional="hide" string="Đơn vị"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state" widget="badge" decoration-success="state=='active'" decoration-muted="state=='returned'"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_dnu_asset_assignment_form" model="ir.ui.view">
            <field name="name">dnu.asset.assignment.form</field>
            <field name="model">dnu.asset.assignment</field>
            <field name="arch" type="xml">
                <form string="Gán tài sản">
                    <header>
                        <button name="action_confirm" string="Xác nhận" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_return" string="Trả lại" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <button name="action_cancel" string="Hủy" type="object" attrs="{'invisible': [('state', 'in', ['returned', 'cancelled'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,returned"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin tài sản">
                                <field name="asset_id" options="{'no_create': True}"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group string="Thông tin nhân viên">
                                <field name="nhan_vien_id" options="{'no_quick_create': True}" placeholder="Chọn từ hệ thống Nhân sự"/>
                                <field name="don_vi_id" attrs="{'invisible': [('nhan_vien_id', '=', False)]}" string="Đơn vị"/>
                                <label for="employee_id" string="-- Hoặc --"/>
                                <field name="employee_id" options="{'no_quick_create': True}" placeholder="Chọn từ HR"/>
                                <field name="department_id" attrs="{'invisible': [('employee_id', '=', False)]}"/>
                            </group>
                        </group>
                        <group string="Thông tin trả lại" attrs="{'invisible': [('state', '!=', 'returned')]}">
                            <field name="return_condition"/>
                            <field name="return_notes"/>
                        </group>
                        <group>
                            <field name="notes" placeholder="Ghi chú..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_dnu_asset_assignment" model="ir.actions.act_window">
            <field name="name">Lịch sử gán tài sản</field>
            <field name="res_model">dnu.asset.assignment</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
