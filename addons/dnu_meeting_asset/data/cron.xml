<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron: Auto Checkout -->
        <record id="cron_auto_checkout_booking" model="ir.cron">
            <field name="name">Tự động check-out đặt phòng</field>
            <field name="model_id" ref="model_dnu_meeting_booking"/>
            <field name="state">code</field>
            <field name="code">model._cron_auto_checkout()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron: Send Reminders -->
        <record id="cron_send_booking_reminders" model="ir.cron">
            <field name="name">Gửi nhắc nhở cuộc họp</field>
            <field name="model_id" ref="model_dnu_meeting_booking"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_reminders()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron: Send Email Reminders 30 minutes before meeting -->
        <record id="cron_send_meeting_email_reminder" model="ir.cron">
            <field name="name">Gửi email nhắc lịch họp (30 phút trước)</field>
            <field name="model_id" ref="model_dnu_meeting_booking"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_email_reminders()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
            <field name="priority">5</field>
        </record>

        <!-- Cron: Task Due/Overdue Notifications -->
        <record id="cron_van_ban_task_deadline_notifications" model="ir.cron">
            <field name="name">Nhắc việc văn bản đến hạn/quá hạn</field>
            <field name="model_id" ref="model_van_ban_task"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_task_deadline_notifications()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).replace(hour=8, minute=0, second=0).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

        <!-- Cron: Check Overdue Lending (Legacy - keep for backward compatibility) -->
        <record id="cron_check_overdue_lending" model="ir.cron">
            <field name="name">Kiểm tra mượn tài sản quá hạn</field>
            <field name="model_id" ref="model_dnu_asset_lending"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_overdue()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron: Send Return Reminders -->
        <record id="cron_send_return_reminders" model="ir.cron">
            <field name="name">Gửi nhắc trả tài sản</field>
            <field name="model_id" ref="model_dnu_asset_lending"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_return_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).replace(hour=8, minute=0, second=0).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

        <!-- Cron: Generate Scheduled Maintenance -->
        <record id="cron_generate_scheduled_maintenance" model="ir.cron">
            <field name="name">Tạo bảo trì định kỳ</field>
            <field name="model_id" ref="model_dnu_maintenance_schedule"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_scheduled_maintenance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron: Compute Depreciation -->
        <record id="cron_compute_depreciation" model="ir.cron">
            <field name="name">Tính khấu hao tự động hàng tháng</field>
            <field name="model_id" ref="model_dnu_asset_depreciation"/>
            <field name="state">code</field>
            <field name="code">model._cron_compute_depreciation()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

        <!-- ====== AUTOMATION CRON JOBS ====== -->

        <!-- Cron: Lending Reminder & Escalation (Feature 1) -->
        <record id="cron_lending_reminder_escalation" model="ir.cron">
            <field name="name">Nhắc trả tài sản + Escalation</field>
            <field name="model_id" ref="model_dnu_asset_lending"/>
            <field name="state">code</field>
            <field name="code">model._cron_lending_reminder_escalation()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).replace(hour=7, minute=0, second=0).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

        <!-- Cron: Warranty/Inspection Reminder (Feature 4) -->
        <record id="cron_warranty_inspection_reminder" model="ir.cron">
            <field name="name">Nhắc hết hạn bảo hành/kiểm định</field>
            <field name="model_id" ref="model_dnu_asset"/>
            <field name="state">code</field>
            <field name="code">model._cron_warranty_inspection_reminder()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).replace(hour=8, minute=0, second=0).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

        <!-- Cron: Periodic Inventory Generation (Feature 6) -->
        <record id="cron_generate_periodic_inventory" model="ir.cron">
            <field name="name">Tạo kiểm kê định kỳ hàng tháng</field>
            <field name="model_id" ref="model_dnu_asset_inventory"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_periodic_inventory()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).replace(hour=6, minute=0, second=0).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

    </data>
</odoo>
