<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default OpenAI Configuration -->
        <!-- IMPORTANT: Set your OpenAI API key in Odoo Settings > Technical > System Parameters -->
        <!-- Or via Odoo UI: Settings > OpenAI Configuration -->
        <record id="openai_config_default" model="openai.configuration">
            <field name="name">Cấu hình OpenAI mặc định</field>
            <field name="api_key">YOUR_OPENAI_API_KEY_HERE</field>
            <field name="model_name">gpt-4o-mini</field>
            <field name="max_tokens">2000</field>
            <field name="temperature">0.7</field>
            <field name="is_default" eval="True"/>
            <field name="active" eval="False"/>
            <field name="status">inactive</field>
        </record>
    </data>
</odoo>
