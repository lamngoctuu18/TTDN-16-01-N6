<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Depreciation Tree View -->
    <record id="view_asset_depreciation_tree" model="ir.ui.view">
        <field name="name">dnu.asset.depreciation.tree</field>
        <field name="model">dnu.asset.depreciation</field>
        <field name="arch" type="xml">
            <tree string="Khấu hao tài sản" decoration-info="state=='draft'" decoration-success="state=='running'" decoration-muted="state=='completed'">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="method"/>
                <field name="purchase_value" widget="monetary"/>
                <field name="total_depreciated" widget="monetary"/>
                <field name="current_value" widget="monetary"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="depreciation_rate" widget="percentage"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Depreciation Form View -->
    <record id="view_asset_depreciation_form" model="ir.ui.view">
        <field name="name">dnu.asset.depreciation.form</field>
        <field name="model">dnu.asset.depreciation</field>
        <field name="arch" type="xml">
            <form string="Khấu hao tài sản">
                <header>
                    <button name="action_regenerate_lines" string="Tạo bảng khấu hao" type="object" class="oe_highlight" states="draft" attrs="{'invisible': [('method','=','manual')]}"/>
                    <button name="action_start" string="Bắt đầu khấu hao" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_complete" string="Hoàn thành" type="object" class="oe_highlight" states="running"/>
                    <button name="action_cancel" string="Hủy" type="object" states="draft,running"/>
                    <button name="action_reset_to_draft" string="Reset về nháp" type="object" states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="asset_id" options="{'no_create': True}"/>
                            <field name="method"/>
                            <field name="start_date"/>
                            <field name="useful_life"/>
                        </group>
                        <group>
                            <field name="purchase_value" widget="monetary"/>
                            <field name="salvage_value" widget="monetary"/>
                            <field name="depreciation_value" widget="monetary"/>
                            <field name="depreciation_rate" widget="percentage"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="total_depreciated" widget="monetary"/>
                            <field name="current_value" widget="monetary"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết khấu hao">
                            <field name="depreciation_line_ids">
                                <tree editable="bottom" decoration-success="state=='posted'" decoration-muted="state=='cancelled'">
                                    <field name="date"/>
                                    <field name="amount" widget="monetary" sum="Total"/>
                                    <field name="accumulated_depreciation" widget="monetary"/>
                                    <field name="book_value" widget="monetary"/>
                                    <field name="state" widget="badge"/>
                                    <button name="action_post" string="Ghi nhận" type="object" icon="fa-check" states="draft"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ghi chú">
                            <field name="notes" placeholder="Ghi chú về khấu hao..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Depreciation Search View -->
    <record id="view_asset_depreciation_search" model="ir.ui.view">
        <field name="name">dnu.asset.depreciation.search</field>
        <field name="model">dnu.asset.depreciation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="asset_id"/>
                <filter string="Đang khấu hao" name="running" domain="[('state','=','running')]"/>
                <filter string="Hoàn thành" name="completed" domain="[('state','=','completed')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Trạng thái" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Phương pháp" name="group_method" context="{'group_by':'method'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_asset_depreciation" model="ir.actions.act_window">
        <field name="name">Khấu hao tài sản</field>
        <field name="res_model">dnu.asset.depreciation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_running': 1}</field>
    </record>

</odoo>
