<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_den_form" model="ir.ui.view">
            <field name="name">van_ban_den</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Văn bản đến</div>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                                <field name="task_count" widget="statinfo" string="Công việc"/>
                            </button>
                        </div>
                        <group col="4" string="Thông tin chung">
                            <field name="ten_van_ban"/>
                            <field name="so_van_ban_den"/>
                            <field name="so_hieu_van_ban"/>
                            <field name="noi_gui_den"/>
                        </group>
                        <group col="4" string="Nhân sự liên quan">
                            <field name="handler_employee_id"/>
                            <field name="signer_employee_id"/>
                            <field name="receiver_employee_ids" widget="many2many_tags"/>
                            <field name="department_id"/>
                            <field name="due_date"/>
                            <field name="is_overdue" readonly="1"/>
                            <field name="reminder_enabled"/>
                            <field name="reminder_days"/>
                            <field name="last_reminder_date" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Giao việc">
                                <group>
                                    <button name="action_create_task" type="object" string="Tạo công việc" class="oe_highlight"/>
                                </group>
                                <field name="task_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="employee_id"/>
                                        <field name="deadline"/>
                                        <field name="state"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    
                </form>
            </field>
        </record>

        <record id="view_van_ban_den_tree" model="ir.ui.view">
            <field name="name">van_ban_den</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ten_van_ban"/>
                    <field name="so_van_ban_den"/>
                    <field name="so_hieu_van_ban"/>
                    <field name="noi_gui_den"/>
                    <field name="handler_employee_id"/>
                    <field name="signer_employee_id"/>
                    <field name="department_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="van_ban_den_search">
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ten_van_ban"/>
                    <field name="so_van_ban_den"/>
                    <field name="so_hieu_van_ban"/>
                    <field name="noi_gui_den"/>
                    <field name="handler_employee_id"/>
                    <field name="signer_employee_id"/>
                    <field name="department_id"/>
                    <filter name="filter_handler" string="Theo cán bộ xử lý" domain="[('handler_employee_id', '!=', False)]"/>
                    <filter name="filter_signer" string="Theo người ký" domain="[('signer_employee_id', '!=', False)]"/>
                    <filter name="filter_department" string="Theo phòng/ban" domain="[('department_id', '!=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_van_ban_den" model="ir.actions.act_window">
            <field name="name">Văn bản đến</field>
            <field name="res_model">van_ban_den</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "van_ban_den_search"/>
        </record>
    </data>
</odoo>
        
    